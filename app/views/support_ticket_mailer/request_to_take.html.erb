<p>Please consider taking <%= link_to(@ticket.name, @url) %>
<%=raw @ticket.summary %>
<% @details.each do |detail| %>
  <% if detail.resolved_ticket? %>
    <dt><%= detail.byline %> (accepted):</dt>
  <% else %>
    <dt><%= detail.byline %></dt>
  <% end %>
      <dd><%= raw detail.content %></dd>
<% end %>
<p>Thank you, <%= @requestor.support_identity.name %>
