<dl>
  <dt><%= "Status" %>:</dt>
    <dd><%= @ticket.pseud_id ? (@ticket.resolved? ? "Closed by " : "Being worked by ") + @ticket.pseud.name : "Open" %></dd>
  <dt><%= "Category" %>:</dt>
    <dd><%= @ticket.category || "Uncategorized" %></dd>
  <dt><%= "Votes" %>:</dt>
    <dd><%= @ticket.vote_count %></dd>
  <dt><%= "Summary" %>:</dt>
    <dd><%= raw @ticket.summary %></dd>
  <% @details.each do |detail| %>
    <% if detail.resolved_ticket? %>
      <dt><%= "Closed by" %> <%= detail.byline %>:</dt>
    <% else %>
      <dt><%= detail.byline %> <%= "wrote" %>:</dt>
    <% end %>
        <dd><%= raw detail.content %></dd>
  <% end %>
</dl>
