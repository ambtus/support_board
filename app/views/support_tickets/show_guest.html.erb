<dl>
  <% if @ticket.display_user_name %>
    <dt><%= "User" %>:</dt>
      <dd><%= link_to @ticket.user.login, @ticket.user %>
  <% end %>
  <dt><%= "Status" %>:</dt>
    <dd><%= @ticket.resolved? ? "Resolved" : @ticket.pseud_id ? "Being worked on by support volunteer " + @ticket.pseud.name : "Open" %></dd>
  <dt><%= "Category" %>:</dt>
    <dd><%= @ticket.category || "Uncategorized" %></dd>
  <dt><%= "Summary" %>:</dt>
    <dd><%= raw @ticket.summary %></dd>
  <% @details.each do |detail| %>
    <% if detail.resolved_ticket? %>
      <dt><%= "Answered by" %> <%= detail.byline %>:</dt>
    <% else %>
      <dt><%= detail.byline %> <%= "wrote" %>:</dt>
    <% end %>
        <dd><%= raw detail.content %></dd>
  <% end %>
</dl>
