<dl>
  <dt><%= "Status" %>:</dt>
    <dd><%= @ticket.status_line %>
      <% if @ticket.code_ticket_id %>
          <%= link_to @ticket.code_ticket.name, @ticket.code_ticket %>
      <% end %>
    </dd>
    <% @ticket.code_commits.each do |commit| %>
      <dt>Commit <%= link_to commit.name, commit %></dt>
        <dd><%= link_to commit.message, commit.url %></dd>
    <% end %>
  <dt><%= "Votes" %>:</dt>
    <dd><%= @ticket.vote_count %></dd>
  <dt><%= "Summary" %>:</dt>
    <dd><%= raw @ticket.summary %></dd>
  <dt><%= "Description" %>:</dt>
    <dd><%= raw @ticket.description %></dd>
  <% @ticket.code_details.each do |detail| %>
    <dt><%= detail.byline %>:</dt>
      <dd><%= raw detail.content %></dd>
  <% end %>
</dl>
