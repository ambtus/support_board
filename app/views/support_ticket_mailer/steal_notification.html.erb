<p><%= link_to(@ticket.name, @url) %> has been stolen by <%= link_to(@stealer.name, @stealer.user) %>.</p>
<%=raw @ticket.summary %>
<% @details.each do |detail| %>
  <% if detail.resolved_ticket? %>
    <dt>Answered by <%= detail.byline %>:</dt>
  <% else %>
    <dt><%= detail.byline %> wrote:</dt>
  <% end %>
      <dd><%= raw detail.content %></dd>
<% end %>
