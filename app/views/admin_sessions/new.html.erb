<% @admin_session = AdminSession.new unless @admin_session %>
<%= form_for @admin_session do |f| %>
  <p>
    <%= f.label :login, "Admin name" %>:
    <%= f.text_field :login %>
    <%= f.label :password, "Admin Password" %>:
    <%= f.password_field :password %>
    <%= f.check_box :remember_me %>
    <%= f.label 'remember_me', "Remember me" %>
    <%= f.submit "Log in as Admin" %>
  </p>
<% end %>
