<% unless current_user %>
  <%= form_for(SupportTicket.new) do %>
    <p class="submit">
      <%= text_field_tag :email %>
      <%= submit_tag "Send me access links to my support tickets" %>
    </p>
  <% end %>
<% end %>
<ul>
  <li><%= link_to "Open a New Support Ticket", new_support_ticket_path %>
  <li><%= link_to "Comments", support_tickets_path(:status => "posted") %>
  <li><%= link_to "Frequently Asked Questions", faqs_path %></li>
  <li><%= link_to "Release Notes", release_notes_path %></li>
  <li><%= link_to "Open Code Tickets (Known Issues)", code_tickets_path %>
  <li><%= link_to "FAQs waiting for comments", faqs_path(:rfc => true) %></li>
  <% if current_user %>
    <li><%= link_to "Open Support Tickets", support_tickets_path %>
  <% end %>
  <% if current_user.try(:support_volunteer?) %>
    <li><%= link_to "Support tickets requiring Admin attention", support_tickets_path(:status => "admin") %>
    <li><%= link_to "Support Tickets in progress", support_tickets_path(:status => "taken") %>
    <li><%= link_to "Support Tickets waiting for Code changes", support_tickets_path(:status => "waiting") %>
    <li><%= link_to "Closed Support Tickets", support_tickets_path(:status => "closed") %>
    <li><%= link_to "Spam Support Tickets", support_tickets_path(:status => "spam") %>


    <li><%= link_to "New Code Ticket", new_code_ticket_path %></li>
    <li><%= link_to "Taken Code Tickets", code_tickets_path(:status => "taken") %></li>
    <li><%= link_to "Committed Code Tickets", code_tickets_path(:status => "committed") %></li>
    <li><%= link_to "Staged Code Tickets", code_tickets_path(:status => "staged") %></li>
    <li><%= link_to "Verified Code Tickets", code_tickets_path(:status => "verified") %></li>
    <li><%= link_to "Closed Code Tickets", code_tickets_path(:status => "closed") %></li>

    <li><%= link_to "New Release Note", new_release_note_path %></li>
    <li><%= link_to "Draft Release Notes", release_notes_path(:drafts => true) %></li>
  <% end %>
  <% if current_user.try(:support_admin?) %>
    <li><%= link_to "Unmatched Commits", code_commits_path(:status => "unmatched") %></li>
    <%= form_tag '/code_tickets' do %>
      <p class="submit">
        <%= submit_tag "Stage Committed Code Tickets" %>
      </p>
      <p>
        <%= label_tag :release_note %>
        <%= select_tag :release_note,
                     options_from_collection_for_select(ReleaseNote.drafts, "id", "release") %>
      </p>
      <p class="submit">
        <%= submit_tag "Deploy Verified Code Tickets" %>
      </p>
    <% end %>
  <% end %>
</ul>
