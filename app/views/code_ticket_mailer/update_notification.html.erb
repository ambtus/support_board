<p><%= link_to @ticket.name, code_ticket_path(@ticket, :only_path => false) %> has been updated.</p>
<%=raw @ticket.summary %>
<% @details.each do |detail| %>
  <% if detail.resolved_ticket? %>
    <dt>Closed by <%= detail.byline %>:</dt>
  <% else %>
    <dt><%= detail.byline %> wrote:</dt>
  <% end %>
      <dd><%= raw detail.content %></dd>
<% end %>
