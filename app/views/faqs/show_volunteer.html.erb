<%= render "show" %>
<%= link_to "Edit", edit_faq_path(@faq) %>
<%= form_for(@faq) do %>
  <% if current_user.try(:support_admin?) %>
    <p><%= submit_tag "Post" %></p>
  <% end %>
  <%= text_area_tag :content %>
  <p><%= label_tag :official, "Official response?" %> <%= check_box_tag :official, true, true %></p>
  <p>
    <%= submit_tag "Add details" %>
    <% if @faq.watched? %>
      <%= submit_tag "Don't watch this FAQ" %>
    <% else %>
      <%= submit_tag "Watch this FAQ"%>
    <% end %>
  </p>
<% end %>
